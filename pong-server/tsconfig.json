{
  "compilerOptions": {
    /* Langage/Sortie */
    "target": "es2016",
    "module": "commonjs",

    /* Résolution de modules */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Dossier d’entrée/sortie */
    "rootDir": ".",        
    "outDir": "dist",

    /* Type checking strict mais on skippe les .d.ts externes */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  /* Indiquer à TS où se trouvent tes fichiers .ts */
  "include": ["./**/*.ts"]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "assets",    // on prend tout ce qui est dans assets/ comme source
    "outDir": "dist",       // on émet les .js à la racine de dist/
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["assets/**/*.ts"]
}

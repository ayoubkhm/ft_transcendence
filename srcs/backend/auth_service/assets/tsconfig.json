{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "srcs",       // include TypeScript source files under srcs/
    "outDir": "dist",       // on émet les .js à la racine de dist/
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["srcs/**/*.ts"]
}
